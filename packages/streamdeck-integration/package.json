{
  "name": "vscode-streamdeck-integration",
  "author": "Masanori Onoue (@ugaya40)",
  "displayName": "Stream Deck Integration",
  "description": "Stream Deck integration host for VSCode",
  "version": "1.0.2",
  "publisher": "ugaya40",
  "icon": "sdi.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ugaya40/vscode-deck",
    "directory": "packages/streamdeck-integration"
  },
  "homepage": "https://github.com/ugaya40/vscode-deck",
  "bugs": {
    "url": "https://github.com/ugaya40/vscode-deck/issues"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "streamdeck",
    "stream deck",
    "elgato",
    "execute scripts"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "type": "module",
  "main": "./dist/extension.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "contributes": {
    "configuration": {
      "title": "Stream Deck Integration",
      "properties": {
        "streamdeck.port": {
          "type": "number",
          "default": 52375,
          "description": "Port number for Stream Deck communication(default: 52375). Requires window reload after change."
        },
        "streamdeck.providers": {
          "type": "object",
          "default": {},
          "description": "Provider-specific settings",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Enable or disable this provider"
              },
              "maxSlots": {
                "type": "number",
                "description": "Maximum number of slots to display"
              },
              "order": {
                "type": "number",
                "description": "Display order (lower numbers appear first)"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "NODE_ENV=production npm run build",
    "prepublishOnly": "npm run build",
    "build": "rollup -c && tsc --emitDeclarationOnly",
    "pack": "vsce package -o ../../ --no-dependencies",
    "pub:vsix": "vsce publish --no-dependencies --baseContentUrl https://github.com/ugaya40/vscode-deck/raw/main/packages/streamdeck-integration/ --baseImagesUrl https://github.com/ugaya40/vscode-deck/raw/main/packages/streamdeck-integration/",
    "pub:npm": "npm publish"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.96.0",
    "@types/ws": "^8.18.1",
    "rollup": "^4.29.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "ws": "^8.19.0"
  }
}
