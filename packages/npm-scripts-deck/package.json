{
  "name": "npm-scripts-deck",
  "author": "Masanori Onoue (@ugaya40)",
  "displayName": "NPM Scripts Deck",
  "description": "Integrate npm scripts into your Stream Deck.",
  "version": "1.0.2",
  "publisher": "ugaya40",
  "icon": "ns.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ugaya40/vscode-deck",
    "directory": "packages/npm-scripts-deck"
  },
  "homepage": "https://github.com/ugaya40/vscode-deck",
  "bugs": {
    "url": "https://github.com/ugaya40/vscode-deck/issues"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "streamdeck",
    "stream deck",
    "elgato",
    "npm",
    "npm scripts",
    "npm run",
    "execute scripts"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "ugaya40.vscode-streamdeck-integration"
  ],
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "ns-deck.json",
        "url": "./schemas/ns-deck.schema.json"
      }
    ]
  },
  "type": "module",
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "NODE_ENV=production npm run build",
    "build": "rollup -c",
    "pack": "vsce package -o ../../ --no-dependencies",
    "pub:vsix": "vsce publish --no-dependencies --baseContentUrl https://github.com/ugaya40/vscode-deck/raw/main/packages/npm-scripts-deck/ --baseImagesUrl https://github.com/ugaya40/vscode-deck/raw/main/packages/npm-scripts-deck/"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.96.0",
    "rollup": "^4.29.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "lucide-static": "^0.563.0",
    "vscode-streamdeck-integration": "*"
  }
}
